{
  "name": "@wenyan-md/cli",
  "version": "1.0.9",
  "description": "A CLI tool for Wenyan markdown rendering & publishing",
  "author": "Lei <caol64@gmail.com> (https://github.com/caol64)",
  "license": "Apache-2.0",
  "keywords": [
    "公众号",
    "markdown",
    "文颜",
    "wenyan",
    "wechat",
    "publishing",
    "renderer"
  ],
  "type": "module",
  "bin": {
    "wenyan": "./bin/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "bin"
  ],
  "homepage": "https://github.com/caol64/wenyan-cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caol64/wenyan-cli.git"
  },
  "bugs": {
    "url": "https://github.com/caol64/wenyan-cli/issues"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "upgrade:core": "pnpm update @wenyan-md/core",
    "prepublishOnly": "pnpm build && pnpm upgrade:core",
    "test:render": "pnpm build && node ./bin/cli.js render -f test/publish.md",
    "test:publish": "pnpm build && pnpm dotenv -e .env.test -- node ./bin/cli.js publish -f test/publish.md -t phycat"
  },
  "packageManager": "pnpm@10.7.1",
  "dependencies": {
    "@wenyan-md/core": "^1.0.17",
    "commander": "^14.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "dotenv-cli": "^10.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
